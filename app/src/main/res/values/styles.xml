<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorDarkBlue</item>
        <item name="colorPrimaryVariant">@color/colorDarkBlue</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="android:colorBackground">@color/colorWhiteSmoke</item>
        <item name="colorOnBackground">@color/colorThunder</item>
        <item name="colorInActive">@color/colorGrayDusty</item>
        <item name="colorHelpText">@color/colorSilver</item>
    </style>

    <style name="ShapeAppearanceOverlay.AppTheme.RoundedCorner" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.AppTheme.MaterialComponents.CustomTextInputLayout"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/colorGrayDusty</item>
        <item name="boxBackgroundColor">@color/colorSilver</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.AppTheme.RoundedCorner</item>
    </style>
</resources>
